    <script>
        // Function to convert C code to MinimalistC (simple example)
        function translateToMinimalistC() {
            let cCode = document.getElementById("cCode").value;
            let minimalistCCode = cCode
                .replace(/int/g, "I")
                .replace(/char/g, "C")
                .replace(/void/g, "V")
                .replace(/return/g, "r")
                .replace(/if/g, "ii")
                .replace(/else/g, "ee")
                .replace(/for/g, "ff")
                .replace(/while/g, "ww")
                .replace(/printf/g, "pr")
                .replace(/scanf/g, "sc")
                .replace(/malloc/g, "ml")
                .replace(/free/g, "fr");

            // Show the output container and update the MinimalistC code
            document.getElementById("minimalistCCode").style.display = 'block';
            document.getElementById("minimalistCCode").value = minimalistCCode;
        }

        // Function to convert MinimalistC code to C (simple example)
        function translateToC() {
            let minimalistCCode = document.getElementById("minimalistCCode").value;
            let cCode = minimalistCCode
                .replace(/I/g, "int")
                .replace(/C/g, "char")
                .replace(/V/g, "void")
                .replace(/r/g, "return")
                .replace(/ii/g, "if")
                .replace(/ee/g, "else")
                .replace(/ff/g, "for")
                .replace(/ww/g, "while")
                .replace(/pr/g, "printf")
                .replace(/sc/g, "scanf")
                .replace(/ml/g, "malloc")
                .replace(/fr/g, "free");

            document.getElementById("cCode").value = cCode;
        }
    </script>
