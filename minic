    <div class="content">
        <h1>MinimalC Translator</h1>
        <div class="textarea-container">
            <textarea id="cCode" placeholder="Paste your C code here..."></textarea>
        </div>
        <button onclick="translateToMinimalistC()">Translate to MinimalistC</button>
        <div class="textarea-container" id="outputContainer">
            <textarea id="minimalistCCode" placeholder="MinimalistC code will appear here..."></textarea>
        </div>
        <button onclick="translateToC()">Translate to C</button>
